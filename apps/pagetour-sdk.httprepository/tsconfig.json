{
  "compilerOptions": {
      "module": "es2015",
      "sourceMap": true,
      "target": "es5",
      "allowJs": false,
      "outDir": "dist",
      "declaration": true,
      "moduleResolution": "node",
      "skipLibCheck": true,
      "lib": ["es2015", "DOM"],
      "downlevelIteration": true
  },
  "typeRoots": [
      "node_modules/@types"
  ],
  "include": [
      "src"
  ],
  "exclude": [
      "node_modules/**/*",
      "**/*.spec.ts"
  ]
}